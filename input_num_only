			function isNumberKey(evt)
			{
				var charCode = (evt.which) ? evt.which : evt.keyCode;
				if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57))
				return false;
				return true;
			}  
			
			
			function isNumericKey(evt)
			{
				var charCode = (evt.which) ? evt.which : evt.keyCode;
				if (charCode != 46 && charCode > 31 
				&& (charCode < 48 || charCode > 57))
				return true;
				return false;
			} 




	<div class="col-md-4"><INPUT id="txtNumber" placeholder="XXX - XXX - XXXX" onkeypress="return isNumberKey(event)"   type="text" name="txtNumber">  </div> //in here onkeypress= event need to put, other is not accepted..
